@model IEnumerable<BrightStarPhase2AssessmentTestEventManagement.Models.Event>

<h2>Upcoming Events</h2>

<!-- Add Event Button -->
<a asp-action="Create" asp-controller="Event" class="btn btn-success">Add Event</a>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Location</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var eventItem in Model)
        {
            <tr>
                <td>@eventItem.Title</td>
                <td>@eventItem.Date.ToShortDateString()</td>
                <td>@eventItem.Location</td>
                <td>
                    <!-- Details Button -->
                    <a asp-action="Details" asp-route-id="@eventItem.Id" class="btn btn-info">Details</a>

                    <!-- Edit Button -->
                    <a asp-action="Edit" asp-route-id="@eventItem.Id" class="btn btn-warning">Edit</a>

                    <!-- Delete Button -->
                    <a asp-action="Delete" asp-route-id="@eventItem.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
