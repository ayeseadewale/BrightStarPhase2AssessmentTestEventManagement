@model IEnumerable<BrightStarPhase2AssessmentTestEventManagement.Models.Event>

<h2>Upcoming Events</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Location</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var eventItem in Model)
        {
            <tr>
                <td>@eventItem.Title</td>
                <td>@eventItem.Date.ToShortDateString()</td>
                <td>@eventItem.Location</td>
                <td>
                    <a asp-action="Details" asp-route-id="@eventItem.Id" class="btn btn-info">View Details</a>
                    <a asp-action="Register" asp-route-id="@eventItem.Id" class="btn btn-primary">Register Now</a>
                </td>
            </tr>
        }
    </tbody>
</table>
